@model CreatePaymentViewModel
@{
    ViewData["Title"] = "CreatePayment";
}
<div class="container py-4">
    <div class="row mb-4">
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }
        <div class="col">
            <h2>Създаване на ново плащане</h2>
            <hr />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">


                    <form asp-action="CreatePayment" method="post">

                        <div class="form-group mb-4">
                            <label asp-for="SendingAccountId" class="control-label">Подател</label>
                            <select asp-for="SendingAccountId" class="form-control" asp-items="Model.UserAccounts">
                                <option value="">-- Избери сметка --</option>
                            </select>
                            <span asp-validation-for="SendingAccountId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ReceivingAccountNumber" class="form-label">Получател</label>
                            <input asp-for="ReceivingAccountNumber" class="form-control form-control-lg" placeholder="Въведи номер на получателя (сметка)" />
                            <span asp-validation-for="ReceivingAccountNumber" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Sum" class="form-label">Сума</label>
                            <input asp-for="Sum" class="form-control form-control-lg" placeholder="Въведи сума" />
                            <span asp-validation-for="Sum" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <input asp-for="Description" class="form-control form-control-lg" placeholder="Въведи описание" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <div class="row">
                            <div class="col text-end">
                                <a asp-controller="Payment"
                                   asp-action="Index"
                                   class="btn btn-secondary me-2">Cancel</a>
                                <button type="submit" class="btn btn-primary">Създай плащане</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
